{deps, [
	{cairerl, ".*", {git, "git://github.com/arekinath/cairerl", "master"}}
]}.
{sub_dirs, ["rel"]}.
{edoc_opts, [{preprocess, true}]}.
{asn1_opts, [per]}.
{port_env, [
	{"CFLAGS", "$CFLAGS -Werror -O2 -g"},
	{"LDFLAGS", "$LDFLAGS"}
]}.
{port_specs, [
	{"priv/rle_nif.so", [
		"c_src/rle.c",
		"c_src/bitmap_encode.c",
		"c_src/bitmap_decode.c"]}
]}.
